
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-offset-3 col-sm-6">
      <h1><%= @restaurant.name %></h1>
      <p><%= @restaurant.address %></p>
      <p><%= @restaurant.category %></p>
      <p><%= @restaurant.phone_number %></p>
      <ul>
        <% @restaurant.reviews.each do |r| %>
        <li> <%= r.content %>
          <%= r.rating %>
        </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>


